<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galaxy5"
    tools:context=".PuzzleLevel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:clickable="false"

            android:fontFamily="@font/supercell"
            android:text="SELECT \n LEVEL"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="36dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/puzzle3x3"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"

                android:fontFamily="@font/supercell"
                android:onClick="puzzle3x3"
                android:scaleType="fitCenter"
                android:text="Easy"
                android:textColor="#ffffff"
                android:textSize="20sp"

                android:background="@drawable/button_green"

                />

            <Button
                android:id="@+id/puzzle4x4"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/supercell"
                android:onClick="puzzle4x4"
                android:scaleType="fitCenter"
                android:text="Medium"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/puzzle5x5"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_orange"
                android:fontFamily="@font/supercell"
                android:onClick="puzzle5x5"
                android:scaleType="fitCenter"
                android:text="Hard"
                android:textColor="#ffffff"

                android:textSize="20sp" />

           <!-- <Button
                android:id="@+id/exit"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_red"
                android:fontFamily="@font/supercell"
                android:onClick="quit"
                android:text="Exit"
                android:textColor="#ffffff"

                android:textSize="20sp" />-->
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>